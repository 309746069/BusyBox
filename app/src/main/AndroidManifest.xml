<manifest
    package="com.jrummyapps.packagemanager"
    xmlns:android="http://schemas.android.com/apk/res/android">

  <application
      android:name="com.jrummyapps.android.base.BaseApp"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/activity_busybox_installer"
      android:supportsRtl="true"
      android:theme="@style/Theme.Light.DarkActionBar">
    <activity
        android:name=".activities.MainActivity"
        android:label="@string/activity_busybox_installer"
        android:launchMode="singleInstance"
        android:theme="@style/Theme.Light.DarkActionBar.NoActionBar.Overlay">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
  </application>

</manifest>
